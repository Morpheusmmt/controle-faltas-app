{
  "compilerOptions": {
    "target": "es2020",
    
    // Configuração CJS Padrão para Express/ts-node
    "module": "commonjs",             
    "esModuleInterop": true,
    "moduleResolution": "node",        // Usa a resolução clássica do Node (CJS)
    
    // Removendo as regras que causam o TS1295 e o ERR_REQUIRE_CYCLE_MODULE
    "verbatimModuleSyntax": false, 
    "isolatedModules": false,      
    
    // Diretórios
    "outDir": "./dist",
    "rootDir": "./src",

    // Regras de Qualidade (Mantenha se desejar)
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}